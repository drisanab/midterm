<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Releasedate</th>
      <th>Distributor</th>
      <th>Genre</th>
      <th>Mpaa</th>
      <th>Grossearning</th>
      <th>Ticketssold</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.rank %></td>
        <td><%= movie.name %></td>
        <td><%= movie.releaseDate %></td>
        <td><%= movie.distributor %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.mpaa %></td>
        <td><%= movie.grossEarning %></td>
        <td><%= movie.ticketsSold %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

